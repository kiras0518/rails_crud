<%=simple_form_for(candidate) do |f| %>

<div class="col-md-6">

    <div class="form-group">
        <%= f.input :name, label: "任務名稱" %>
    </div>
    <div class="form-group">
        <%= f.input :party, label: "描述" %>
    </div>
    <!--
    <div class="form-group">
        <%= f.input :politics, label: "備註" %>
    </div>-->
    <div class="form-group">
        <%= f.label :截止日期 %>
        <%= f.date_select(:time, :order => [:year, :month, :day]) %>
    </div>

    <%= f.button :submit, "保存", class: "btn btn-success" %>
   
</div>
<% end %>